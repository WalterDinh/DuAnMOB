<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"

    android:weightSum="6">

    <TextView
        android:id="@+id/txt_bill_item_idbill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.5"
        android:text="Mã hóa đơn"
        android:textAlignment="center"
        android:textColor="#000" />

    <TextView
        android:id="@+id/txt_bill_item_tablename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:text="Tên bàn"
        android:textAlignment="center"
        android:textColor="#000" />

    <TextView
        android:id="@+id/txt_bill_item_paytime"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:text="Giờ thanh toán"
        android:textAlignment="center"
        android:textColor="#000" />

    <TextView
        android:id="@+id/txt_bill_item_pay"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.5"
        android:text="Tiền thu"
        android:textAlignment="center"
        android:textColor="#000" />
</LinearLayout>